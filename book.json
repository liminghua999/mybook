{
"title" : "Gitbook for LMH",
"author" : "lmh",
"description" : "记录Gitbook的配置和一些插件的使用",
"language" : "zh-hans",
"plugins": [
    "-search",
    "back-to-top-button",
    "expandable-chapters-small",
    "back-to-top-button",
    "chapter-fold",
    "expandable-chapters-small",
    "expandable-chapters",
    "code",
    "todo",
    "search-pro",
    "-lunr",
    "advanced-emoji",
    "emphasize",
    "splitter",
    "-sharing", "sharing-plus",
    "insert-logo"
],
"pluginsConfig": {
        "favicon": "images/logo.png",
        "insert-logo": {
            "url": "images/logo.png",
            "style": "background: none; max-height: 60px; min-height: 60px"
        },
        "page-copyright": {
          "description": "修改时间：20201208",
          "signature": "lmh",
          "wisdom": "Designer, Frontend Developer & overall web enthusiast",
          "format": "YYYY-MM-dd hh:mm:ss",
          "copyright": "Copyright &#169; lmh",
          "timeColor": "#666",
          "copyrightColor": "#666",
          "utcOffset": "8",
          "style": "normal",
          "noPowered": false
        },
        "sharing": {
           "douban": false,
           "google": true,
           "linkedin": true,
           "messenger": false,
           "qq": false,
           "qzone": true,
           "weibo": true,
           "whatsapp": false,
           "all": [
               "douban",  "google", 
               "linkedin","twitter", "weibo",
               "messenger","qq", "qzone","weibo",
               "whatsapp"
           ]
       }
    }
}
